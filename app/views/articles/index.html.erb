<h1> All Articles      							
<h2><button><%= link_to "Create New Article", new_article_path, :class => "new_article" %></button></h2>
</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
       <%= link_to article.title, article_path(article),
       :class => "article_title" %><br/>
    </li>
  <% end %>
</ul>

